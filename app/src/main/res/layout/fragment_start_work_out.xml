<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartWorkFragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/theme4"
        android:paddingStart="30dp"
        android:paddingRight="30dp"
        android:text="Jeda"
        android:textColor="@color/theme1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/theme4"
        android:paddingStart="30dp"

        app:cornerRadius="10dp"
        android:paddingRight="30dp"

        android:textColor="@color/theme1"
        android:textStyle="bold"
        android:text="Jeda"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button" />

    <ImageView
        android:id="@+id/ID_StartWork_Image"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/asset1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ID_StartWork_TxtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="03:00"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/ID_DoWork_TxtKegiatan"
        app:layout_constraintStart_toStartOf="@+id/ID_DoWork_TxtKegiatan"
        app:layout_constraintTop_toBottomOf="@+id/ID_DoWork_TxtKegiatan" />

    <TextView
        android:id="@+id/ID_DoWork_TxtKegiatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_black"
        android:text="Kegiatan"
        android:textColor="@color/theme1"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_StartWork_Image" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ID_StartWork_BtnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/theme1"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/theme1"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        app:cornerRadius="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:text="Next"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/ID_DoWork_TxtKegiatan"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/ID_DoWork_TxtKegiatan"
        app:layout_constraintTop_toBottomOf="@+id/ID_StartWork_TxtTime" />

</androidx.constraintlayout.widget.ConstraintLayout>